{
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "node",
      "outDir": "dist",
      "target": "ES2023",
      "lib": ["ES2023"],
      "baseUrl": "./",
      "sourceMap": true,
      "allowJs": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "ignoreDeprecations": "5.0"
    },
    "include": [
      "src",
    ],
    "exclude": [
      "node_modules",
      "dist",
      "templates"
    ]
  }
  